; RUN: %if online-spirv-as %{ spirv-as --target-env %spv_tgt_env -o %spv_file_s %s %}
; RUN: %if online-spirv-as %{ spirv-val %spv_file_s %}
; RUN: spirv-ll-tool -a OpenCL -b 64 %spv_file_s | FileCheck %s
                        OpCapability Kernel
                        OpCapability Addresses
                   %1 = OpExtInstImport "OpenCL.std"
                        OpMemoryModel Physical64 OpenCL
                        OpEntryPoint Kernel %modf_v3float "modf_v3float"
                        OpSource OpenCL_C 102000
                        OpName %in_iptr "in_iptr"

; All types, variables and constants
              %void_t = OpTypeVoid
             %float_t = OpTypeFloat 32
           %v3float_t = OpTypeVector %float_t 3
       %v3float_ptr_t = OpTypePointer CrossWorkgroup %v3float_t
           %modf_fn_t = OpTypeFunction %void_t %v3float_ptr_t
             %float_1 = OpConstant %float_t 1.4
           %v3float_1 = OpConstantComposite %v3float_t %float_1 %float_1 %float_1

; All functions
        %modf_v3float = OpFunction %void_t None %modf_fn_t
             %in_iptr = OpFunctionParameter %v3float_ptr_t
; CHECK: define spir_kernel void @modf_v3float(ptr addrspace(1) %in_iptr)
                   %2 = OpLabel
                   %3 = OpExtInst %v3float_t %1 modf %v3float_1 %in_iptr
; CHECK: = call spir_func <3 x float> @_Z4modfDv3_fPU3AS1S_(<3 x float> <float 0x3FF6666660000000, float 0x3FF6666660000000, float 0x3FF6666660000000>, ptr addrspace(1) %in_iptr)
                        OpReturn
; CHECK: ret void
                        OpFunctionEnd
; CHECK: }
