; RUN: %if online-spirv-as %{ spirv-as --target-env %spv_tgt_env -o %spv_file_s %s %}
; RUN: %if online-spirv-as %{ spirv-val %spv_file_s %}
; RUN: spirv-ll-tool -a OpenCL -b 64 -c Float64 %spv_file_s | FileCheck %s
                            OpCapability Kernel
                            OpCapability Addresses
                            OpCapability Float64
                       %1 = OpExtInstImport "OpenCL.std"
                            OpMemoryModel Physical64 OpenCL
                            OpEntryPoint Kernel %fast_normalize_v3double "fast_normalize_v3double"
                            OpSource OpenCL_C 102000

; All types, variables and constants
                  %void_t = OpTypeVoid
                %double_t = OpTypeFloat 64
              %v3double_t = OpTypeVector %double_t 3
     %fast_normalize_fn_t = OpTypeFunction %void_t
                %double_5 = OpConstant %double_t 5.0
              %v3double_5 = OpConstantComposite %v3double_t %double_5 %double_5 %double_5

; All functions
 %fast_normalize_v3double = OpFunction %void_t None %fast_normalize_fn_t
; CHECK: define spir_kernel void @fast_normalize_v3double()
                       %2 = OpLabel
                       %3 = OpExtInst %v3double_t %1 fast_normalize %v3double_5
; CHECK: = call spir_func <3 x double> @_Z14fast_normalizeDv3_d(<3 x double> <double 5.000000e+00, double 5.000000e+00, double 5.000000e+00>)
                            OpReturn
; CHECK: ret void
                            OpFunctionEnd
; CHECK: }
