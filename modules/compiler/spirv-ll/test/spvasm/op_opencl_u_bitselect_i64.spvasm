; RUN: %if online-spirv-as %{ spirv-as --target-env %spv_tgt_env -o %spv_file_s %s %}
; RUN: %if online-spirv-as %{ spirv-val %spv_file_s %}
; RUN: spirv-ll-tool -a OpenCL -b 64 %spv_file_s | FileCheck %s
                        OpCapability Kernel
                        OpCapability Addresses
                        OpCapability Int64
                   %1 = OpExtInstImport "OpenCL.std"
                        OpMemoryModel Physical64 OpenCL
                        OpEntryPoint Kernel %u_bitselect_i64 "u_bitselect_i64"
                        OpSource OpenCL_C 102000

; All types, variables and constants
              %void_t = OpTypeVoid
               %i64_t = OpTypeInt 64 0
    %u_bitselect_fn_t = OpTypeFunction %void_t
               %i64_1 = OpConstant %i64_t 1
               %i64_2 = OpConstant %i64_t 2
               %i64_3 = OpConstant %i64_t 3

; All functions
     %u_bitselect_i64 = OpFunction %void_t None %u_bitselect_fn_t
; CHECK: define spir_kernel void @u_bitselect_i64()
                   %2 = OpLabel
                   %3 = OpExtInst %i64_t %1 bitselect %i64_1 %i64_2 %i64_3
; CHECK: = call spir_func i64 @_Z9bitselectmmm(i64 1, i64 2, i64 3)
                        OpReturn
; CHECK: ret void
                        OpFunctionEnd
; CHECK: }
