; RUN: %if online-spirv-as %{ spirv-as --target-env %spv_tgt_env -o %spv_file_s %s %}
; RUN: %if online-spirv-as %{ spirv-val %spv_file_s %}
; RUN: spirv-ll-tool -a OpenCL -b 64 %spv_file_s | FileCheck %s
                        OpCapability Kernel
                        OpCapability Addresses
                        OpCapability Int16
                   %1 = OpExtInstImport "OpenCL.std"
                        OpMemoryModel Physical64 OpenCL
                        OpEntryPoint Kernel %s_abs_diff_v3i16 "s_abs_diff_v3i16"
                        OpSource OpenCL_C 102000

; All types, variables and constants
              %void_t = OpTypeVoid
               %i16_t = OpTypeInt 16 0
             %v3i16_t = OpTypeVector %i16_t 3
     %s_abs_diff_fn_t = OpTypeFunction %void_t
               %i16_2 = OpConstant %i16_t 2
               %i16_5 = OpConstant %i16_t 5
             %v3i16_2 = OpConstantComposite %v3i16_t %i16_2 %i16_2 %i16_2
             %v3i16_5 = OpConstantComposite %v3i16_t %i16_5 %i16_5 %i16_5

; All functions
    %s_abs_diff_v3i16 = OpFunction %void_t None %s_abs_diff_fn_t
; CHECK: define spir_kernel void @s_abs_diff_v3i16()
                   %2 = OpLabel
                   %3 = OpExtInst %v3i16_t %1 s_abs_diff %v3i16_2 %v3i16_5
; CHECK: = call spir_func <3 x i16> @_Z8abs_diffDv3_sS_(<3 x i16> <i16 2, i16 2, i16 2>, <3 x i16> <i16 5, i16 5, i16 5>)
                        OpReturn
; CHECK: ret void
                        OpFunctionEnd
; CHECK: }
