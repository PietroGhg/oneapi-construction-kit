; RUN: %if online-spirv-as %{ spirv-as --target-env %spv_tgt_env -o %spv_file_s %s %}
; RUN: %if online-spirv-as %{ spirv-val %spv_file_s %}
; RUN: spirv-ll-tool -a OpenCL -b 64 -c Float64 %spv_file_s | FileCheck %s
                        OpCapability Kernel
                        OpCapability Addresses
                        OpCapability Float64
                   %1 = OpExtInstImport "OpenCL.std"
                        OpMemoryModel Physical64 OpenCL
                        OpEntryPoint Kernel %step_v3double "step_v3double"
                        OpSource OpenCL_C 102000

; All types, variables and constants
              %void_t = OpTypeVoid
            %double_t = OpTypeFloat 64
          %v3double_t = OpTypeVector %double_t 3
           %step_fn_t = OpTypeFunction %void_t
            %double_1 = OpConstant %double_t 1.9
            %double_2 = OpConstant %double_t 2.0
          %v3double_1 = OpConstantComposite %v3double_t %double_1 %double_1 %double_1
          %v3double_2 = OpConstantComposite %v3double_t %double_2 %double_2 %double_2

; All functions
       %step_v3double = OpFunction %void_t None %step_fn_t
; CHECK: define spir_kernel void @step_v3double()
                   %2 = OpLabel
                   %3 = OpExtInst %v3double_t %1 step %v3double_1 %v3double_2
; CHECK: = call spir_func <3 x double> @_Z4stepDv3_dS_(<3 x double> <double 1.900000e+00, double 1.900000e+00, double 1.900000e+00>, <3 x double> <double 2.000000e+00, double 2.000000e+00, double 2.000000e+00>)
                        OpReturn
; CHECK: ret void
                        OpFunctionEnd
; CHECK: }
