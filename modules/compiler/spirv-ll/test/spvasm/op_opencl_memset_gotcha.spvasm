; RUN: %if online-spirv-as %{ spirv-as --target-env %spv_tgt_env -o %spv_file_s %s %}
; RUN: %if online-spirv-as %{ spirv-val %spv_file_s %}
; RUN: spirv-ll-tool -a OpenCL -b 64 -E %spv_file_s | FileCheck %s

; The point of this test is that it looks a lot like a memset to spirv-ll-tool
; but the checks in OpCopyMemorySized should notice that our constant array
; isn't the same all the way through and generate a memcpy instead.
               OpCapability Addresses
               OpCapability Kernel
               OpCapability Int64
               OpCapability Int8
          %1 = OpExtInstImport "OpenCL.std"
               OpMemoryModel Physical64 OpenCL
               OpEntryPoint Kernel %6 "memset_gotcha"
               OpSource OpenCL_C 102000
               OpName %out "out"
               OpName %entry "entry"
               OpDecorate %24 Constant
       %uint = OpTypeInt 32 0
      %ulong = OpTypeInt 64 0
      %uchar = OpTypeInt 8 0
    %ulong_4 = OpConstant %ulong 4
   %uchar_42 = OpConstant %uchar 42
   %uchar_41 = OpConstant %uchar 41
       %void = OpTypeVoid
%_ptr_CrossWorkgroup_uint = OpTypePointer CrossWorkgroup %uint
          %5 = OpTypeFunction %void %_ptr_CrossWorkgroup_uint
%_ptr_Function_uchar = OpTypePointer Function %uchar
%_arr_uchar_ulong_4 = OpTypeArray %uchar %ulong_4
%_ptr_UniformConstant__arr_uchar_ulong_16 = OpTypePointer UniformConstant %_arr_uchar_ulong_4
%_ptr_UniformConstant_uchar = OpTypePointer UniformConstant %uchar
         %22 = OpConstantComposite %_arr_uchar_ulong_4 %uchar_42 %uchar_42 %uchar_42 %uchar_41
         %24 = OpVariable %_ptr_UniformConstant__arr_uchar_ulong_16 UniformConstant %22
          %6 = OpFunction %void None %5
; CHECK: define spir_kernel void @memset_gotcha(ptr addrspace(1) %out)
        %out = OpFunctionParameter %_ptr_CrossWorkgroup_uint
      %entry = OpLabel
         %16 = OpConvertPtrToU %ulong %out
         %19 = OpConvertUToPtr %_ptr_Function_uchar %16
         %26 = OpBitcast %_ptr_UniformConstant_uchar %24
               OpCopyMemorySized %19 %26 %ulong_4 Aligned 1
; CHECK: call void @llvm.memcpy.p0.p2.i64(ptr align 1 {{%.*}}, ptr addrspace(2) align 1 @0, i64 4, i1 false)
               OpReturn
               OpFunctionEnd
