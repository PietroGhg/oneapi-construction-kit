; RUN: %if online-spirv-as %{ spirv-as --target-env %spv_tgt_env -o %spv_file_s %s %}
; RUN: %if online-spirv-as %{ spirv-val %spv_file_s %}
; RUN: spirv-ll-tool -a OpenCL -b 64 %spv_file_s | FileCheck %s
                        OpCapability Kernel
                        OpCapability Addresses
                        OpCapability Int8
                   %1 = OpExtInstImport "OpenCL.std"
                        OpMemoryModel Physical64 OpenCL
                        OpEntryPoint Kernel %s_hadd_v2i8 "s_hadd_v2i8"
                        OpSource OpenCL_C 102000

; All types, variables and constants
              %void_t = OpTypeVoid
                %i8_t = OpTypeInt 8 0
              %v2i8_t = OpTypeVector %i8_t 2
         %s_hadd_fn_t = OpTypeFunction %void_t
                %i8_1 = OpConstant %i8_t 1
                %i8_2 = OpConstant %i8_t 2
              %v2i8_1 = OpConstantComposite %v2i8_t %i8_1 %i8_1
              %v2i8_2 = OpConstantComposite %v2i8_t %i8_2 %i8_2

; All functions
         %s_hadd_v2i8 = OpFunction %void_t None %s_hadd_fn_t
; CHECK: define spir_kernel void @s_hadd_v2i8()
                   %2 = OpLabel
                   %3 = OpExtInst %v2i8_t %1 s_hadd %v2i8_1 %v2i8_2
; CHECK: = call spir_func <2 x i8> @_Z4haddDv2_cS_(<2 x i8> <i8 1, i8 1>, <2 x i8> <i8 2, i8 2>)
                        OpReturn
; CHECK: ret void
                        OpFunctionEnd
; CHECK: }
