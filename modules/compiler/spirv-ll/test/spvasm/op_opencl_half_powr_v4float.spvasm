; RUN: %if online-spirv-as %{ spirv-as --target-env %spv_tgt_env -o %spv_file_s %s %}
; RUN: %if online-spirv-as %{ spirv-val %spv_file_s %}
; RUN: spirv-ll-tool -a OpenCL -b 64 %spv_file_s | FileCheck %s
                        OpCapability Kernel
                        OpCapability Addresses
                   %1 = OpExtInstImport "OpenCL.std"
                        OpMemoryModel Physical64 OpenCL
                        OpEntryPoint Kernel %half_powr_v4float "half_powr_v4float"
                        OpSource OpenCL_C 102000

; All types, variables and constants
              %void_t = OpTypeVoid
             %float_t = OpTypeFloat 32
           %v4float_t = OpTypeVector %float_t 4
      %half_powr_fn_t = OpTypeFunction %void_t
             %float_0 = OpConstant %float_t 0.5
             %float_2 = OpConstant %float_t 2.0
           %v4float_0 = OpConstantComposite %v4float_t %float_0 %float_0 %float_0 %float_0
           %v4float_2 = OpConstantComposite %v4float_t %float_2 %float_2 %float_2 %float_2

; All functions
   %half_powr_v4float = OpFunction %void_t None %half_powr_fn_t
; CHECK: define spir_kernel void @half_powr_v4float()
                   %2 = OpLabel
                   %3 = OpExtInst %v4float_t %1 half_powr %v4float_2 %v4float_0
; CHECK: = call spir_func <4 x float> @_Z9half_powrDv4_fS_(<4 x float> <float 2.000000e+00, float 2.000000e+00, float 2.000000e+00, float 2.000000e+00>, <4 x float> <float 5.000000e-01, float 5.000000e-01, float 5.000000e-01, float 5.000000e-01>)
                        OpReturn
; CHECK: ret void
                        OpFunctionEnd
; CHECK: }
