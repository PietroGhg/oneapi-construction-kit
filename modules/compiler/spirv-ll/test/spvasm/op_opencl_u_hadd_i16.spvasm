; RUN: %if online-spirv-as %{ spirv-as --target-env %spv_tgt_env -o %spv_file_s %s %}
; RUN: %if online-spirv-as %{ spirv-val %spv_file_s %}
; RUN: spirv-ll-tool -a OpenCL -b 64 %spv_file_s | FileCheck %s
                        OpCapability Kernel
                        OpCapability Addresses
                        OpCapability Int16
                   %1 = OpExtInstImport "OpenCL.std"
                        OpMemoryModel Physical64 OpenCL
                        OpEntryPoint Kernel %u_hadd_i16 "u_hadd_i16"
                        OpSource OpenCL_C 102000

; All types, variables and constants
              %void_t = OpTypeVoid
               %i16_t = OpTypeInt 16 0
         %u_hadd_fn_t = OpTypeFunction %void_t
               %i16_1 = OpConstant %i16_t 1
               %i16_2 = OpConstant %i16_t 2

; All functions
          %u_hadd_i16 = OpFunction %void_t None %u_hadd_fn_t
; CHECK: define spir_kernel void @u_hadd_i16()
                   %2 = OpLabel
                   %3 = OpExtInst %i16_t %1 u_hadd %i16_1 %i16_2
; CHECK: = call spir_func zeroext i16 @_Z4haddtt(i16 zeroext 1, i16 zeroext 2)
                        OpReturn
; CHECK: ret void
                        OpFunctionEnd
; CHECK: }
