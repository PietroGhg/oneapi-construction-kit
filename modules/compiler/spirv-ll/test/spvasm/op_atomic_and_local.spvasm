; RUN: %if online-spirv-as %{ spirv-as --target-env %spv_tgt_env -o %spv_file_s %s %}
; RUN: %if online-spirv-as %{ spirv-val %spv_file_s %}
; RUN: spirv-ll-tool -a OpenCL -b 64 -c Float64 %spv_file_s | FileCheck %s
            OpCapability Kernel
            OpCapability Addresses
            OpCapability Float64
            OpCapability Int64
            OpMemoryModel Physical64 OpenCL
            OpEntryPoint Kernel %atomic "atomic"
            OpName %atomic "atomic"
            OpName %a "a"
    %void = OpTypeVoid
    %uint = OpTypeInt 32 0
%_ptr_Workgroup_uint = OpTypePointer Workgroup %uint
       %3 = OpTypeFunction %void %_ptr_Workgroup_uint
       %9 = OpConstant %uint 424
  %uint_1 = OpConstant %uint 1
  %uint_0 = OpConstant %uint 0
  %atomic = OpFunction %void None %3
       %a = OpFunctionParameter %_ptr_Workgroup_uint
       %5 = OpLabel
%original = OpAtomicAnd %uint %a %uint_1 %uint_0 %9
            OpReturn
            OpFunctionEnd
; CHECK: ; ModuleID = '{{.*}}'
; CHECK: define spir_kernel void @atomic(ptr addrspace(3) [[IN:%.*]])
; CHECK: = call spir_func i32 @_Z10atomic_andPU3AS3Vjj(ptr addrspace(3) [[IN]], i32 424)
; CHECK: ret void
; CHECK: declare spir_func i32 @_Z10atomic_andPU3AS3Vjj(ptr addrspace(3), i32)
