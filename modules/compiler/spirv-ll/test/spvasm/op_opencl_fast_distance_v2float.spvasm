; RUN: %if online-spirv-as %{ spirv-as --target-env %spv_tgt_env -o %spv_file_s %s %}
; RUN: %if online-spirv-as %{ spirv-val %spv_file_s %}
; RUN: spirv-ll-tool -a OpenCL -b 64 %spv_file_s | FileCheck %s
                          OpCapability Kernel
                          OpCapability Addresses
                     %1 = OpExtInstImport "OpenCL.std"
                          OpMemoryModel Physical64 OpenCL
                          OpEntryPoint Kernel %fast_distance_v2float "fast_distance_v2float"
                          OpSource OpenCL_C 102000

; All types, variables and constants
                %void_t = OpTypeVoid
               %float_t = OpTypeFloat 32
             %v2float_t = OpTypeVector %float_t 2
    %fast_distance_fn_t = OpTypeFunction %void_t
               %float_2 = OpConstant %float_t 2.0
               %float_4 = OpConstant %float_t 4.0
             %v2float_2 = OpConstantComposite %v2float_t %float_2 %float_2
             %v2float_4 = OpConstantComposite %v2float_t %float_4 %float_4

; All functions
 %fast_distance_v2float = OpFunction %void_t None %fast_distance_fn_t
; CHECK: define spir_kernel void @fast_distance_v2float()
                     %2 = OpLabel
                     %3 = OpExtInst %float_t %1 fast_distance %v2float_2 %v2float_4
; CHECK: = call spir_func float @_Z13fast_distanceDv2_fS_(<2 x float> <float 2.000000e+00, float 2.000000e+00>, <2 x float> <float 4.000000e+00, float 4.000000e+00>)
                          OpReturn
; CHECK: ret void
                          OpFunctionEnd
; CHECK: }
